@model IEnumerable<DOANLTW.Models.ChiTietDatHang>

@{
    ViewBag.Title = "ChiTietDH";
}

<style>
    th, td {
        padding: 15px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px; /* Khoảng cách giữa các ô */
        background-color: #f2f2f2; /* Màu nền của bảng */
    }

    th {
        background: #4CAF50;
        color: white;
        transition: transform 0.2s; /* Hiệu ứng khi di chuột qua */
    }

        th:hover {
            transform: scale(1.1); /* Phóng to di chuột qua */
        }

    td {
        background-color: #ffffff; /* Màu nền của ô td */
    }

    img {
        max-width: 100px;
        max-height: 100px;
        display: block;
        margin: auto;
        transition: transform 0.2s; /* Hiệu ứng khi di chuột qua */
    }

        img:hover {
            transform: scale(1.1); /* Phóng to khi di chuột qua */
        }
</style>

<h2>Chi tiết đơn hàng</h2>

@if (Model.Any())
{
    <table class="table-bordered">
        <tr>
            <th>Mã món hàng</th>
            <th>Tên món hàng</th>
            <th>Hình ảnh sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MonAn.MaMon</td>
                <td>@item.MonAn.TenMon</td>
                <td>
                    <img src="~/Assets/Images/@item.MonAn.AnhDD" />
                </td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia</td>
            </tr>
        }
    </table>
}
else
{
    <p>Không có món hàng nào trong đơn hàng này.</p>
}


